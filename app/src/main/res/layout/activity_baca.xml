<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:nestedScrollingEnabled="false"
        android:id="@+id/images"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/bottombar"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_round_arrow_back_24"
        android:background="@drawable/nav_shape"
        app:tint="@color/black"
        app:backgroundTint="@color/white"
        android:layout_margin="20dp"
        android:padding="8dp"
        />

    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingVertical="20dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true">

        <ImageButton
            android:id="@+id/page_prev"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_expand_more_24"
            android:rotation="90"
            android:padding="0dp"
            android:background="@android:color/transparent"
            app:tint="@color/accent2"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Kaifuku Jutsushi Yarinaoshi: Sokushi Mahou to Skill Copy no Chouetsu Heal Chapter 48"
            android:textSize="16sp"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:ellipsize="start"
            android:fontFamily="@font/quicksandsemibold"
            android:textColor="@color/white"
            android:layout_marginHorizontal="10dp"
            />

        <ImageButton
            android:id="@+id/page_next"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_round_expand_more_24"
            android:background="@android:color/transparent"
            android:padding="0dp"
            android:rotation="-90"
            app:tint="@color/accent"
            />
    </LinearLayout>

</RelativeLayout>